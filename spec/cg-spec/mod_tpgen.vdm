        let qnm = if n in set dom rename then GenQReName2(mnm,rename(n)) else GenQReName2(mnm,n) in
        type_l := type_l^[mk_AS`TypeDef(qnm,LOT(mk_AS`TypeName(qnm)),CI`NilContextId)];

  return type_l;
);

\end{vdm_al}

