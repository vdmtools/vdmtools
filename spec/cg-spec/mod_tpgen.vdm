GenCloneMethod : CPP`Identifier * TagList * TagEnv ==> CPP`FunctionDefinition
GenCloneMethod(cn,sl,tenv) ==
(
  dcl  arglist : seq of CPP`Expr := [],
       stmtl   : seq of CPP`Stmt := [];

  -- Generate argument list
  def basic = GetBasicTypes() in
    for j = 1 to len(sl) do (
      if tenv(sl(j)) in set basic or (if (is_CPP`Identifier(tenv(sl(j)))) then
                                        let mk_CPP`Identifier(id,-) = tenv(sl(j)) in
                                        if id(1,...,7) = "quotes." then true else false
                                      else false)
      then
        arglist := arglist^[sl(j)]
      else
        arglist := arglist^[BC`GenCastExpr(BC`GenTypeSpecifier(tenv(sl(j))),
                                           BC`GenFctCall(BC`GenIdentifier("UTIL.clone"), [sl(j)]))]
  );

    stmtl := stmtl^[BC`GenReturnStmt(BC`GenClassInstanceCreationExpr(cn,arglist))];

  let decl=BC`GenFctDecl(BC`GenIdentifier("clone"),[]) in
  return BC`GenJavaFctDef([],[BC`GenModifier(<PUBLIC>)],
                      [BC`GenTypeSpecifier(BC`GenIdentifier("Object"))],decl,nil,BC`GenBlock(stmtl))
);

GenAsciiMethod : CPP`Identifier * TagList * TagEnv ==> CPP`FunctionDefinition
GenAsciiMethod(cn,sl,tenv) ==
def mk_CPP`Identifier(id,-) = cn;
    classnm = CGAUX`GiveCurCName();
    basic = GetBasicTypes() in
(
  dcl  expr: CPP`Expr,
       stmt: CPP`Stmt;

  -- Generate list
    if len(sl) > 0 then
      ( expr := BC`GenStringLit("mk_"^classnm^"`"^id^"(");
        for j = 1 to len(sl) do (
          if CGMAIN`get_smalltypes_option()
          then  if tenv(sl(j)) = BC`GenIdentifier("char")
                then expr := BC`GenPlus(expr,BC`GenPlus(BC`GenPlus(BC`GenStringLit("'"),sl(j)),BC`GenStringLit("'")))
                elseif tenv(sl(j)) in set basic
                then expr := BC`GenPlus(expr,sl(j))
                else expr := BC`GenPlus(expr,BC`GenFctCallObjMemAcc(BC`GenIdentifier("UTIL"),"toString",[sl(j)]))
          else  expr := BC`GenPlus(expr,BC`GenFctCallObjMemAcc(BC`GenIdentifier("UTIL"),"toString",[sl(j)]));
          if j <> len(sl)
          then expr := BC`GenPlus(expr,BC`GenStringLit(", "));
        );
        expr := BC`GenPlus(expr,BC`GenStringLit(")"));
      )
    else
      expr := BC`GenStringLit("mk_"^classnm^"`"^id^"()");

    stmt := BC`GenReturnStmt(expr);
    let decl=BC`GenFctDecl(BC`GenIdentifier("toString"),[]) in
    return BC`GenJavaFctDef([],[BC`GenModifier(<PUBLIC>)],
                            [BC`GenTypeSpecifier(BC`GenIdentifier("String"))],decl,nil,stmt)
);


GenEqualsMethod : CPP`Identifier * TagList * TagEnv * DCEnv ==> CPP`FunctionDefinition
GenEqualsMethod(cn,sl,tenv, dcenv) ==
(
  dcl stmt   : CPP`Stmt,
      expr : [CPP`Expr] := nil,
      fieldnum : int := 0;

    for j = 1 to len(sl) do (
      let dc = dcenv(sl(j))
      in
        if dc
        then fieldnum := fieldnum
        else fieldnum := fieldnum + 1
    );
   if (fieldnum = 0)
   then stmt :=  BC`GenReturnStmt(BC`GenTypeComp(BC`GenTypeSpecifier(cn ), BC`GenIdentifier("obj") ))
   else
   (
     -- Generate list
     def basic = GetBasicTypes() in
     for j = 1 to len(sl) do (
       let dc = dcenv(sl(j)) in
       if not dc
       then
        (dcl new_expr : CPP`Expr;
         if CGMAIN`get_smalltypes_option() and tenv(sl(j)) in set basic
         then new_expr := BC`GenEq(sl(j),BC`GenQualifiedName(BC`GenIdentifier("temp"),sl(j)))
         else new_expr := BC`GenFctCall(BC`GenIdentifier("UTIL.equals"),
                                [sl(j),BC`GenQualifiedName(BC`GenIdentifier("temp"),sl(j))]);
         if expr = nil
         then expr := new_expr
         else expr := BC`GenLogAnd(expr, new_expr)
       )
     );

     let lhs = BC`GenIdentifier("obj"),
         rhs = BC`GenTypeSpecifier(cn),
         test = BC`GenNot(BC`GenBracketedExpr(BC`GenTypeComp(rhs, lhs ))),
         elseStmts = [BC`GenDecl(BC`GenTypeSpecifier(cn),
                                 BC`GenIdentifier("temp"),
                                 BC`GenAsgnInit(
                                   BC`GenCastExpr(BC`GenTypeSpecifier(cn),
                                                  BC`GenIdentifier("obj")))),
                                                  BC`GenReturnStmt(expr) ]
     in
     stmt := BC`GenIfStmt( test, BC`GenReturnStmt(BC`GenIdentifier("false")), BC`GenBlock(elseStmts));
   );

   let arg  = BC`GenArgDecl([BC`GenTypeSpecifier(BC`GenIdentifier("Object"))], BC`GenIdentifier("obj")),
       decl = BC`GenFctDecl(BC`GenIdentifier("equals"),[arg])
   in
     return BC`GenJavaFctDef([],[BC`GenModifier(<PUBLIC>)],[DS`GenSmallBoolType()],decl,nil,stmt)
);
\end{vdm_al}

$GenHashMethod$ generates a naive hash method based on the sum of the
hash values of those members of the class that are relevant to equality testing.
\begin{vdm_al}
GenHashMethod : CPP`Identifier * TagList * TagEnv * DCEnv ==> CPP`FunctionDefinition
GenHashMethod(-,sl,-, dcenv) ==
 (dcl stmt : CPP`Stmt,
      expr : [CPP`Expr] := nil,
      fieldnum : int := 0;

  for j = 1 to len(sl) do
   (let dc = dcenv(sl(j))
    in
      if not dc
      then fieldnum := fieldnum + 1
   );

  if (fieldnum = 0)
  then stmt := BC`GenReturnStmt(BC`GenIntegerLit(0))
  else
   (
    for j = 1 to len(sl) do
     (let dc = dcenv(sl(j))
      in
        -- Note the complication here that we need to guard calls
        -- to a fields hashCode method in case the field is null
        let rhs  = BC`GenCondExpr(
                         BC`GenEq(sl(j),BC`GenIdentifier("null")),
                         BC`GenIntegerLit(0),
                         BC`GenFctCallObjMemAcc(sl(j),"hashCode",[]))
        in
          --if expr = nil
          --then if not dc
          --     then expr := rhs
          --     else skip
          --else if not dc
          --     then expr := BC`GenPlus(expr,rhs)
          --     else skip
          if not dc
          then if expr = nil
               then expr := rhs
               else expr := BC`GenPlus(expr,rhs)
     );
    stmt := BC`GenReturnStmt(expr);
  );

  let decl = BC`GenFctDecl(BC`GenIdentifier("hashCode"),[]) in
  return BC`GenJavaFctDef([],[BC`GenModifier(<PUBLIC>)],[DS`GenSmallIntType()],decl,nil,stmt)
);

\end{vdm_al}

