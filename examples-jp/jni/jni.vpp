public static
println: seq of char | real | bool | jstring ==> ()
println(x) ==
  def ostr = cases true:
               (isofclass(jstring, x)) -> JNI`GetStringChars(x),
               (is_(x, seq of char))   -> x,
               (is_real(x))            -> VDMUtil`val2seq_of_char[real](x),
               (is_bool(x))            -> VDMUtil`val2seq_of_char[bool](x)
             end;
      - = new IO().echo(ostr ^ "\n");
  in skip;

