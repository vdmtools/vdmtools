public static
GetClassTp: jobject | seq1 of char ==> seq1 of char
GetClassTp(obj) == 
  cases true:
   (isofclass(jobject, obj)) -> let str = jnienv.GetTp(obj)
                                in
                                  return cases str:
                                           "L" ^ x ^ ";" -> x,
                                           others        -> str
                                         end,
   others                    -> return obj 
  end;

