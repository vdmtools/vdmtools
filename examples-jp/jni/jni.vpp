public static
NewBigDecimal: seq1 of char | real ==> jobject
NewBigDecimal(val) ==
  def ini = cases true:
              (is_real(val)) -> VDMUtil`val2seq_of_char[real](val),
              others         -> val
            end
  in
    return NewObject("java/math/BigDecimal", [JNI`NewString(ini)], "(Ljava/lang/String;)V");

